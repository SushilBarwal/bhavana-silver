{
    "info": {
        "name": "Bhavana Silver API - Simple Token Auth",
        "description": "Simplified API authentication using token generation",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api/v1",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Generate Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"token\", jsonData.token);",
                                    "    pm.environment.set(\"auth_token\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"My API Token\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/token",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "token"
                            ]
                        },
                        "description": "Generate a new API token. Token is automatically saved for use in other requests."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products?per_page=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "products"
                            ],
                            "query": [
                                {
                                    "key": "per_page",
                                    "value": "10"
                                },
                                {
                                    "key": "search",
                                    "value": "",
                                    "disabled": true
                                },
                                {
                                    "key": "category",
                                    "value": "",
                                    "disabled": true
                                }
                            ]
                        },
                        "description": "Get paginated list of products (requires authentication)"
                    },
                    "response": []
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "products",
                                "1"
                            ]
                        },
                        "description": "Get a single product by ID (requires authentication)"
                    },
                    "response": []
                },
                {
                    "name": "Get Product by Slug",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
